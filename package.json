{
  "name": "nest-boilerplate",
  "version": "0.1.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "scripts": {
    "build": "cross-env NODE_ENV=production nest build --webpack --webpackPath=./webpack.config.js",
    "build:bin": "yarn build && cd dist && npx nexe --build -t windows -i ./main.js -o hmiserver.exe",
    "postinstall": "yarn clean",
    "clean": "rimraf \"./db\" && rimraf dist && rimraf \"./conf/migrations\"",
    "build:dev": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "yarn postinstall && cross-env NODE_ENV=debug nest start --webpack --webpackPath=./webpack.config.js --debug --watch",
    "start:prod": "yarn build && yarn postinstall && node dist/main",
    "dist:zip": "yarn build && mkdirp ./bin && node ./scripts/build-zip.js ./bin",
    "lint": "eslint \"{src,apps,libs,test,scripts}/**/{*.ts,*.js}\" --fix",
    "test": "cross-env NODE_ENV=development jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=development jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "9.0.11",
    "@nestjs/core": "9.0.11",
    "@nestjs/event-emitter": "1.3.1",
    "@nestjs/jwt": "9.0.0",
    "@nestjs/passport": "9.0.0",
    "@nestjs/platform-express": "9.0.11",
    "@nestjs/swagger": "6.0.5",
    "@nestjs/typeorm": "9.0.1",
    "aedes": "0.47.0",
    "aedes-server-factory": "0.2.1",
    "argon2": "0.29.1",
    "async-mutex": "0.3.2",
    "body-parser": "1.20.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "crypto-js": "4.1.1",
    "fast-copy": "^2.1.3",
    "fastify-swagger": "5.2.0",
    "file-stream-rotator": "^0.6.1",
    "fs-extra": "10.1.0",
    "iconv-lite": "0.6.3",
    "nestjs-pino": "3.1.1",
    "nodejs-unique-numeric-id-generator": "1.0.1",
    "passport": "0.6.0",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "pino-http": "8.2.0",
    "pino-multi-stream": "6.0.0",
    "ramda": "0.28.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6",
    "sqlite3": "5.0.11",
    "swagger-ui-express": "4.5.0",
    "typeorm": "0.3.7",
    "urlencode": "1.1.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@fastify/static": "^6.5.0",
    "@nestjs/cli": "9.0.0",
    "@nestjs/config": "2.2.0",
    "@nestjs/schematics": "9.0.1",
    "@nestjs/serve-static": "3.0.0",
    "@nestjs/testing": "9.0.11",
    "@types/adm-zip": "0.5.0",
    "@types/crypto-js": "4.1.1",
    "@types/express": "4.17.13",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "28.1.8",
    "@types/multer": "1.4.7",
    "@types/node": "18.7.13",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/pino-http": "5.8.1",
    "@types/pino-multi-stream": "5.1.3",
    "@types/pino-pretty": "4.7.5",
    "@types/ramda": "0.28.15",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.35.1",
    "@typescript-eslint/parser": "5.35.1",
    "adm-zip": "0.5.9",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "11.0.0",
    "cross-env": "7.0.3",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.8.7",
    "fork-ts-checker-webpack-plugin": "7.2.13",
    "jest": "28.1.3",
    "jest-mock-extended": "2.0.7",
    "mkdirp": "1.0.4",
    "node-loader": "2.0.0",
    "nodevxcollector": "1.0.0",
    "pino-pretty": "9.1.0",
    "prettier": "~2.7.1",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.21",
    "supertest": "6.2.4",
    "ts-jest": "~28.0.8",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "tsconfig-paths-webpack-plugin": "4.0.0",
    "tsutils": "3.21.0",
    "typescript": "4.7.4",
    "webpack": "5.74.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/../src/$1",
      "^@entities/(.*)$": "<rootDir>/../src/entities/$1",
      "^@common/(.*)$": "<rootDir>/../src/common/$1",
      "^@util/(.*)$": "<rootDir>/../src/util/$1",
      "^@shared/(.*)$": "<rootDir>/../src/shared/$1",
      "^@modules/(.*)$": "<rootDir>/../src/modules/$1"
    }
  }
}